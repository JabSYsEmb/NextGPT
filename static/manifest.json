{
  "manifest_version": 3,
  "version": "0.0.3",
  "name": "NextGPT â€“ Your Next ChatGPT Experience",
  "description": "Take your ChatGPT experience one step further",

  "background": {
    "scripts": ["service-worker/bg.js"]
  },

  "content_scripts": [
    {
      "matches": ["https://*.chatgpt.com/*", "https://chatgpt.com/*"],
      "js": ["src/bundle.min.js"],
      "css": ["css/content-script.css"]
    }
  ],

  "web_accessible_resources": [
    {
      "resources": ["src/**/*.js"],
      "matches": ["https://chatgpt.com/*"]
    }
  ],

  "omnibox": {
    "keyword": "chatgpt"
  },

  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "64": "icons/icon64.png",
    "128": "icons/icon128.png"
  },

  "host_permissions": ["https://*.chatgpt.com/*", "https://chatgpt.com/*"],

  "permissions": ["tabs", "scripting", "downloads"]
}
